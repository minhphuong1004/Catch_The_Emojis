<Window x:Class="CatchTheEmoji.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatchTheEmoji"
        mc:Ignorable="d"
        Title="Catch The Emoji ₍ᐢ. .ᐢ₎" Height="600" Width="800" Background="#FFDDD8"
        MouseMove="Window_MouseMove" MouseDown="Window_MouseDown" KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid>
        <TextBlock Text="𓆝 𓆟 𓆞 𓆝 𓆟" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Margin="0,0,0,150" FontFamily="Bodoni MT" FontWeight="DemiBold" Foreground="#FFA5B1"/>
        <TextBlock Text="𓆝 𓆟 𓆞 𓆝 𓆟" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Margin="0,0,0,-40" FontFamily="Bodoni MT" FontWeight="DemiBold" Foreground="#FFA5B1"/>
        <TextBlock Text="Click on emojis to catch them ₍^. .^₎⟆" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Margin="0,0,0,40" FontFamily="Bodoni MT" FontWeight="DemiBold" Foreground="#FFA5B1"/>
        <Canvas Name="minigameCanvas"/>
        <DockPanel VerticalAlignment="Bottom" Background="#F2F1ED" Height="60">
            <TextBox x:Name="collectBox" Width="600" Margin="10,10,10,10" FontSize="20" IsReadOnly="True" Background="#f9ece3" Foreground="#eb86ab" />
            <Button x:Name="ClearBtn" Content="Clear" Width="100" Height="40" Margin="10,10,10,10" FontSize="14" Background="#FFB0B5" Foreground="Black" FontFamily="Britannic Bold" Click="ClearBtn_Click"/>
        </DockPanel>
    </Grid>
</Window>
